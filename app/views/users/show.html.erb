<!-- Display User Information -->
<h1>User Details</h1>

<p><strong>First Name:</strong> <%= @user.userFirstName %></p>
<p><strong>Last Name:</strong> <%= @user.userSurname %></p>
<p><strong>Email:</strong> <%= @user.emailAddress %></p>
<p><strong>Account Status:</strong> <%= @user.accountStatus %></p>
<p><strong>Is Admin:</strong> <%= @user.isAdmin ? 'Yes' : 'No' %></p>

<!-- Links based on user role -->
<% if current_user&.isAdmin %>
  <div>
    <%= link_to "Edit this user", edit_user_path(@user) %> |
    <%= link_to "Delete Account", @user, method: :delete, data: { confirm: "Are you sure?" } %> |
    <%= link_to "Back to Users", users_path %>
  </div>
<% else %>
  <div>
    <%= link_to "Edit this user", edit_user_path(@user) %> |
    <%= link_to "Back to Home", root_path %>
  </div>
<% end %>
