
<!-- 
  This view serves as the landing page for standard users after they log in. 
  It greets the user by name, displays a heading, provides space for general messages, 
  and includes a link to edit the user's account details.
-->

<!-- Greet the user by their first name -->
<p>Hello <%= current_user.userFirstName %></p>

<!-- Page heading for the standard user landing page -->
<h3>Standard User Landing Page</h3>

<!-- Placeholder text for future messages to the user -->
<p>This is where general messages to the account holder would go</p>

<!-- Link to edit the current user's account details -->
<%= link_to "Edit your account details", edit_user_path(current_user), class: "btn btn-link" %>
