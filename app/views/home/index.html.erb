<!-- app/views/home/index.html.erb -->
<!-- 
  This is the home page of the MyQuote application. 
  It displays a welcome message, slogan, and a list of recently added quotes.
-->

<h1>Welcome to MyQuote</h1> <!-- Main heading for the page -->

<p>If you have a story, we have the quotes!</p> <!-- Application slogan -->

<h3>Recently Added Quotes</h3> <!-- Subheading for the quotes section -->
<hr /> <!-- Horizontal line for separation -->

<!-- Iterate through each quote and display it in a styled card -->
<% @quotes.each do |quote| %>
  <div class="card bg-body-tertiary" style="margin-bottom:10px">
    <div class="card-body">
      <!-- Display the first name of the user who posted the quote -->
      <h4 class="card-title">Posted by: <%= quote.user.userFirstName %></h4> 
      
      <!-- Display the quote description and a link to read the full quote -->
      <p class="card-text">
        <%= quote.quoteDescription %><br />
        [<a href="/quotes/<%= quote.id %>">Read full quote</a>]
      </p>
    </div>
  </div>
<% end %>
